generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  user_name    String     @unique
  password     String
  role         UserRole   @default(USER)
  full_name    String?
  company_name String?
  mobile_no    String?
  country_code String     @default("+91")
  photo        String?
  status       UserStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  permissions  UserPermission?
  alertRules   AlertRule[]     @relation("AlertRuleCreatedBy")
}

model UserPermission {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  modules       Json
  energySubRoutes Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AlertRule {
  id          Int       @id @default(autoincrement())
  meterLabel  String
  parameter   String
  threshold   Float
  message     String
  isActive    Boolean   @default(true)
  createdById Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  createdBy   User?          @relation("AlertRuleCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)
  alerts      TriggeredAlert[]

  @@index([meterLabel])
  @@index([parameter])
}

model TriggeredAlert {
  id         Int            @id @default(autoincrement())
  severity   AlertSeverity
  message    String
  meterLabel String?
  parameter  String?
  value      Float?
  ruleId     Int?
  occurredAt DateTime       @default(now())
  createdAt  DateTime       @default(now())

  rule       AlertRule?     @relation(fields: [ruleId], references: [id], onDelete: SetNull)

  @@index([occurredAt])
  @@index([severity])
}

model EventRecord {
  id             Int      @id @default(autoincrement())
  eventId         Int     @unique
  meterId         Int
  occurredAt      DateTime
  avgCurrent      Float
  avgVoltage      Float
  avgPowerFactor  Float
  totalKW         Float
  totalKWH        Float
  createdAt       DateTime @default(now())

  @@index([meterId, occurredAt])
}

model EnergyReading {
  id        Int      @id @default(autoincrement())
  deviceId  String
  ts        DateTime
  meterKW   Float?
  meterKWH  Float?
  raw       Json?
  createdAt DateTime @default(now())

  @@unique([deviceId, ts])
  @@index([deviceId, ts])
}

enum UserRole {
  USER
  ADMIN
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

